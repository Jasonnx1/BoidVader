int previousTime;
int deltaTime;
int currentTime;
ArrayList<Boid> ennemies;
int Nennemies = 2;

void setup()
{
  size(640, 480);
  currentTime = millis();
  previousTime = millis();
  ennemies = new ArrayList<Boid>();
  for (int i = 0; i < Nennemies; i++) {
    Boid b = new Boid(new PVector(random(0, width), random(0, height)), new PVector(random (-2, 2), random(-2, 2)));
    b.fillColor = color(random(255), random(255), random(255));
    ennemies.add(b);
  }
  
  ennemies.get(0).debug = true;
}


void draw()
{
  currentTime = millis();
  deltaTime = currentTime - previousTime;
 
  update(deltaTime);
  display();
  
  previousTime = currentTime;
}

void update(int deltatime)
{
  
  for (Boid b : ennemies) {
    
    
    
    b.flock(ennemies);
    b.update(deltatime);
    
    
  }
  
}

void display()

{
  background(0);
    for(int i = 0; i < ennemies.size(); i++)
  {
    
    ennemies.get(i).display();
    
  }
  
}
